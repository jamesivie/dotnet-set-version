<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
	<TargetFrameworks>netcoreapp3.1;net5.0;net6.0;net7.0</TargetFrameworks>
	<LangVersion>11.0</LangVersion>
	<RootNamespace>dotnet_set_version</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<Version>1.2.0</Version>
	<Authors>James Ivie</Authors>
	<Company>James Ivie</Company>
	<Description>An MIT-licensed utility program that updates version numbers in project files and AssemblyInfo.cs files.</Description>
	<Copyright>2020-2023</Copyright>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<PackageProjectUrl>https://github.com/jamesivie/dotnet-set-version</PackageProjectUrl>
	<RepositoryUrl>https://github.com/jamesivie/dotnet-set-version</RepositoryUrl>
	<PackAsTool>True</PackAsTool>
	<ToolCommandName>dotnet-set-version</ToolCommandName>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<DebugType>embedded</DebugType>
	<IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
	<PackageOutputPath>./nupkg</PackageOutputPath>
  </PropertyGroup>

</Project>
